<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/pillarMenImage"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        app:layout_constraintBottom_toTopOf="@+id/pokeThemeImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pillarmen" />

    <ImageView
        android:id="@+id/xyImage"
        android:layout_width="169dp"
        android:layout_height="89dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pokemonxy" />

    <ImageView
        android:id="@+id/pokeThemeImage"
        android:layout_width="152dp"
        android:layout_height="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pillarMenImage"
        app:srcCompat="@drawable/poketheme" />

    <ImageView
        android:id="@+id/platinumImage"
        android:layout_width="99dp"
        android:layout_height="95dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/xyImage"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/platinum" />

    <ImageView
        android:id="@+id/rebornImage"
        android:layout_width="183dp"
        android:layout_height="116dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rebornCityImage"
        app:srcCompat="@drawable/pokemonreborn" />

    <ImageView
        android:id="@+id/rebornCityImage"
        android:layout_width="172dp"
        android:layout_height="117dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pokeThemeImage"
        app:srcCompat="@drawable/reborncity" />

    <ImageView
        android:id="@+id/peridotImage"
        android:layout_width="171dp"
        android:layout_height="157dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rebornCityImage"
        app:srcCompat="@drawable/peridot" />

    <ImageView
        android:id="@+id/opalImage"
        android:layout_width="130dp"
        android:layout_height="182dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rebornImage"
        app:srcCompat="@drawable/opal" />

    <ImageView
        android:id="@+id/obsidiaImage"
        android:layout_width="205dp"
        android:layout_height="159dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toEndOf="@+id/opalImage"
        app:layout_constraintTop_toBottomOf="@+id/peridotImage"
        app:srcCompat="@drawable/obsidia" />

</androidx.constraintlayout.widget.ConstraintLayout>